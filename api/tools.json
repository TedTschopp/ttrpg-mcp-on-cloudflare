---
layout: null
---
{
  "tools": [
    {
      "name": "generate_encounter",
      "description": "Generate a random encounter for a TTRPG session based on party level, environment, and difficulty",
      "inputSchema": {
        "type": "object",
        "properties": {
          "level": {
            "type": "integer",
            "description": "Party level (1-20)",
            "minimum": 1,
            "maximum": 20
          },
          "environment": {
            "type": "string",
            "description": "Environment type",
            "enum": ["forest", "dungeon", "city", "mountain", "swamp", "desert", "ocean", "underdark", "plains"]
          },
          "difficulty": {
            "type": "string",
            "description": "Encounter difficulty",
            "enum": ["easy", "medium", "hard", "deadly"]
          }
        },
        "required": ["level", "environment"]
      }
    },
    {
      "name": "generate_npc_name",
      "description": "Generate an NPC name for a fantasy character based on race and optional gender",
      "inputSchema": {
        "type": "object",
        "properties": {
          "race": {
            "type": "string",
            "description": "Fantasy race",
            "enum": ["human", "elf", "dwarf", "halfling", "gnome", "half-elf", "half-orc", "tiefling", "dragonborn", "orc", "goblin"]
          },
          "gender": {
            "type": "string",
            "description": "Gender (optional)",
            "enum": ["male", "female", "neutral"]
          }
        },
        "required": ["race"]
      }
    },
    {
      "name": "generate_location_name",
      "description": "Generate a name for a location such as a tavern, city, dungeon, or shop",
      "inputSchema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Location type",
            "enum": ["tavern", "inn", "city", "town", "village", "dungeon", "castle", "shop", "guild", "temple"]
          }
        },
        "required": ["type"]
      }
    },
    {
      "name": "generate_personality",
      "description": "Generate personality traits, ideals, bonds, and flaws for an NPC",
      "inputSchema": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "description": "Number of traits to generate",
            "minimum": 1,
            "maximum": 10,
            "default": 4
          }
        }
      }
    },
    {
      "name": "generate_treasure",
      "description": "Generate treasure and loot based on challenge rating",
      "inputSchema": {
        "type": "object",
        "properties": {
          "cr": {
            "type": "integer",
            "description": "Challenge Rating (0-30)",
            "minimum": 0,
            "maximum": 30
          },
          "type": {
            "type": "string",
            "description": "Treasure type",
            "enum": ["individual", "hoard"],
            "default": "individual"
          }
        },
        "required": ["cr"]
      }
    },
    {
      "name": "generate_weather",
      "description": "Generate weather conditions and atmospheric descriptions",
      "inputSchema": {
        "type": "object",
        "properties": {
          "climate": {
            "type": "string",
            "description": "Climate zone",
            "enum": ["temperate", "arctic", "tropical", "desert", "mountain"]
          },
          "season": {
            "type": "string",
            "description": "Season (optional)",
            "enum": ["spring", "summer", "autumn", "winter"]
          }
        },
        "required": ["climate"]
      }
    },
    {
      "name": "generate_plot_hook",
      "description": "Generate adventure hooks and quest ideas for your campaign",
      "inputSchema": {
        "type": "object",
        "properties": {
          "theme": {
            "type": "string",
            "description": "Adventure theme",
            "enum": ["mystery", "combat", "intrigue", "exploration", "horror", "comedy", "romance", "rescue"]
          },
          "level": {
            "type": "integer",
            "description": "Suggested party level (optional)",
            "minimum": 1,
            "maximum": 20
          }
        },
        "required": ["theme"]
      }
    }
  ]
}
